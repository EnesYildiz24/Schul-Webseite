{
  "name": "ziplocalgit",
  "version": "1.0.10",
  "description": "Command line tool to zip the local git repository",
  "author": "Jens von Pilgrim <jens.vonpilgrim@bht-berlin.de>",
  "license": "EPL-2.0",
  "homepage": "https://gitlab.bht-berlin.de/nodepackages/ziplocalgit",
  "repository": {
    "type": "git",
    "url": "https://gitlab.bht-berlin.de/nodepackages/ziplocalgit.git"
  },
  "keywords": [
    "zip",
    "git",
    "student",
    "moodle",
    "cli"
  ],
  "bin": {
    "ziplocalgit": "./bin/cli.js"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "bin/cli.js",
    "dist/"
  ],
  "scripts": {
    "build": "tsc && copyfiles --up 1 -e ./src/**/*.ts ./src/**/*.* dist",
    "clean": "rimraf dist",
    "watch.build": "tsc --watch",
    "test": "JEST_JUNIT_SUITE_NAME=\"{filename}\" jest",
    "prepack": "npm run build"
  },
  "dependencies": {
    "adm-zip": "^0.5.15",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.3.0",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  }
}
